<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray11" />
            <stroke android:width="1dp" android:color="@color/gray11" />
            <corners android:topLeftRadius="6px" android:topRightRadius="6px"
                android:bottomRightRadius="6px" android:bottomLeftRadius="6px" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray6" />
            <stroke android:width="1dp" android:color="@color/gray11" />
            <corners android:topLeftRadius="6px" android:topRightRadius="6px"
                android:bottomRightRadius="6px" android:bottomLeftRadius="6px" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/gray11" />
            <corners android:topLeftRadius="6px" android:topRightRadius="6px"
                android:bottomRightRadius="6px" android:bottomLeftRadius="6px" />
        </shape>
    </item>

</selector>